include ../utilities/_mixins
doctype html
html(lang="en")
  head
    include _head

  body
    // place where pjax bindings happen's
    #barba-wrapper
      block header
        include ../../components/header/_header

      // what should be changed with every pjax
      .page(class=outClass)
        .page__content
          block content


        if !excludeFooter
          block footer
            include ../../components/footer/_footer

        block popups
          include ../../components/popup/_popup

      block scripts
        include _scripts
